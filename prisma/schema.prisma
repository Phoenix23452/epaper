generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NewsPages {
  id           Int              @id @default(autoincrement())
  date         String
  image        String
  titleId      Int? // FK to PageCategory
  title        PageCategory?    @relation(fields: [titleId], references: [id])
  mapData      MapData[]
  newspapers   NewspaperPages[]
  lastModified String?
}

model Newspapers {
  id             Int               @id @default(autoincrement())
  date           String
  titleId        Int // FK to NewspaperCategory
  title          NewspaperCategory @relation(fields: [titleId], references: [id])
  newspaperPages NewspaperPages[]
}

model NewspaperPages {
  newsPageId  Int
  newspaperId Int

  newsPage  NewsPages  @relation(fields: [newsPageId], references: [id])
  newspaper Newspapers @relation(fields: [newspaperId], references: [id])

  @@id([newsPageId, newspaperId])
}

model NewspaperCategory {
  id         Int          @id @default(autoincrement())
  title      String
  slug       String       @unique
  order      Int
  newspapers Newspapers[]
}

model PageCategory {
  id        Int         @id @default(autoincrement())
  title     String
  slug      String      @unique
  order     Int
  newsPages NewsPages[]
}

model MapData {
  id           Int       @id @default(autoincrement())
  coordinates  String
  title        String?
  croppedImage String?
  newsPageId   Int
  newsPage     NewsPages @relation(fields: [newsPageId], references: [id])
}

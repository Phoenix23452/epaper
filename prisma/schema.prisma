model NewspaperCategory {
  id         Int         @id @default(autoincrement())
  title      String
  slug       String      @unique
  order      Int         @default(0)
  newspapers Newspaper[]

  @@map("newspaper-categories")
}

model PageCategory {
  id        Int        @id @default(autoincrement())
  title     String
  slug      String     @unique
  order     Int        @default(0)
  newsPages NewsPage[]

  @@map("page-categories")
}

model MapData {
  id           Int      @id @default(autoincrement())
  coordinates  String
  title        String?
  croppedImage String?
  newsPageId   Int
  newsPage     NewsPage @relation(fields: [newsPageId], references: [id])

  @@map("map-data")
}
